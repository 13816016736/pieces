<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jointown.zy.common.dao.MessageConfig">
	<resultMap id="messageConfig" type="com.jointown.zy.common.model.MessageConfig">
		<id column="CONFIG_ID" property="configId" jdbcType="INTEGER" />
		<result column="CHANNEL_NAME" property="channelName" jdbcType="VARCHAR" />
		<result column="MEMO" property="memo" jdbcType="VARCHAR" />
		<result column="STATUS" property="status" jdbcType="INTEGER" />
		<result column="CLASSNAME" property="className" jdbcType="VARCHAR" />
		<result column="CREATE_TIME" property="createTime" jdbcType="TIMESTAMP" />
		<result column="UPDATE_TIME" property="updateTime" jdbcType="TIMESTAMP" />
		<result column="UPDATER" property="updater" jdbcType="INTEGER" />
	</resultMap>
	
	<!-- 查询已启用的短信通道 -->
	<select id="getAvailableChannel" resultMap="messageConfig">
		select * from BOSS.MESSAGE_CONFIG where status = 1 and ROWNUM = 1
	</select>

	
</mapper>