<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml" />
    <logger name="org.springframework.web" level="INFO"/>
    <!--&lt;!&ndash;<logger name="com.ms" level="ERROR" />&ndash;&gt;-->
    <!--&lt;!&ndash; 日志输出到控制台 &ndash;&gt;-->
    <!--<appender name="console" class="ch.qos.logback.core.ConsoleAppender">-->
        <!--<encoder charset="UTF-8">-->
            <!--<pattern>[%cn] [%date] [%thread] %logger{0} [%level] %msg%n</pattern>-->
        <!--</encoder>-->
    <!--</appender>-->

    <!-- ch.qos.logback.core.rolling.RollingFileAppender 文件日志输出 -->
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--<Encoding>UTF-8</Encoding>-->
        <File>../logs/yaoyouyoubiz.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>
                ../logs/yaoyouyoubiz-%d{yyyy-MM-dd}.%i.log
            </FileNamePattern>
            <MaxHistory>10</MaxHistory>
            <TimeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <MaxFileSize>5MB</MaxFileSize>
            </TimeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <!--<layout class="ch.qos.logback.classic.PatternLayout">-->
            <!--<pattern>-->
                <!--[%-5level] %d{HH:mm:ss.SSS} [%thread] %logger{36} - %msg%n-->
            <!--</pattern>-->
        <!--</layout>-->
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d %p (%file:%line\)- %m%n</pattern>
        </encoder>
    </appender>

    <!-- 日志级别 -->
    <root>
        <level value="error" />
        <level value="info" />
        <level value="debug" />
        <appender-ref ref="file" />
    </root>

</configuration>