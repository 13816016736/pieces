<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pieces.dao.CodeTypeMapper">
    <resultMap id="BaseResultMap" type="com.pieces.dao.model.CodeType">
            <id column="id"  property="id" />
            <result column="name"  property="name" />
            <result column="create_time"  property="createTime" />
        
    </resultMap>

    <sql id="Base_Column_List">
        id,name,create_time
    </sql>

    <select id="findById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from code_type
        where id = #{id}
    </select>

    <select id="findAll"  resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from code_type
    </select>

    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from code_type
        where id = #{id}
    </delete>

    <insert id="create" parameterType="com.pieces.dao.model.CodeType">
        insert into
        code_type (name,create_time)
        values
        (#{name},#{createTime})
    </insert>

    <update id="update" parameterType="com.pieces.dao.model.CodeType">
        update code_type
        <set>
                                                        
            <if test="name != null">
                name = #{name},
            </if>
                                            
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
                            
        </set>
        where id = #{id}
    </update>
</mapper>