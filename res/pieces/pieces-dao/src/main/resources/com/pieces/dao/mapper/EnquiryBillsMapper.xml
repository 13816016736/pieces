<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pieces.dao.EnquiryBillsMapper">
    <resultMap id="EnquiryBillsResultMap" type="com.pieces.dao.model.EnquiryBills">
            <id column="id"  property="id" />
            <result column="code"  property="code" />
            <result column="user_id"  property="userId" />
            <result column="member_id"  property="memberId" />
            <result column="status"  property="status" />
            <result column="create_time"  property="createTime" />
            <result column="update_time"  property="updateTime" />
            <result column="update_user"  property="updateUser" />
            <result column="quoted_time"  property="quotedTime" />
            <collection property="enquiryCommoditys" ofType="com.pieces.dao.model.EnquiryCommoditys">
                <id property="id" column="encomd_id"/>
                <id property="commodityId" column="commodity_id"/>
                <id property="commodityName" column="commodity_name"/>
                <id property="specs" column="specs"/>
                <id property="level" column="level"/>
                <id property="origin" column="origin"/>
                <id property="amount" column="amount"/>
                <id property="expectPrice" column="expect_price"/>
                <id property="expectDate" column="expect_date"/>
                <id property="myPrice" column="my_price"/>
                <id property="expireDate" column="expire_date"/>
                <id property="createTime" column="encomd_create_time"/>
            </collection>
    </resultMap>

    <resultMap id="EnquiryBillsVOResultMap" type="com.pieces.dao.vo.EnquiryBillsVO" extends="EnquiryBillsResultMap">
        <result column="userName"  property="userName" />
        <result column="companyFullName"  property="companyFullName" />
        <result column="areaFull"  property="areaFull" />
        <result column="contactMobile"  property="contactMobile" />
        <result column="contactName"  property="contactName" />
    </resultMap>

    <sql id="Base_Column_List">
        id,code,user_id,member_id,status,create_time,update_time,update_user,quoted_time
    </sql>

    <select id="findById" parameterType="java.lang.Integer" resultMap="EnquiryBillsResultMap">
        select
        <include refid="Base_Column_List" />
        from enquiry_bills
        where id = #{id}
    </select>

    <select id="findAll"  resultMap="EnquiryBillsResultMap">
        select
        <include refid="Base_Column_List" />
        from enquiry_bills
    </select>

    <select id="findByParam" parameterType="com.pieces.dao.vo.EnquiryBillsVO"  resultMap="EnquiryBillsVOResultMap">
        select
        enquiry_bills.id as id,code,user_id,member_id,status,enquiry_bills.create_time as create_time,
        enquiry_bills.update_time as update_time,update_user,quoted_time,
        user_name AS userName,company_full_name as companyFullName,area_full as areaFull,
        user.contact_mobile as contactMobile, user.contact_name as contactName
        from enquiry_bills
        left join user on user_id = user.id
        <where>
            <if test="id != null">
                enquiry_bills.id = #{id}
            </if>

            <if test="code != null">
                and code like "%"#{code}"%"
            </if>

            <if test="userId != null">
                and user_id = #{userId}
            </if>

            <if test="memberId != null">
                and member_id = #{memberId}
            </if>

            <if test="status != null">
                and status = #{status}
            </if>

            <if test="createTime != null">
                and enquiry_bills.create_time = #{createTime}
            </if>
            <if test="startTime != null">
                and enquiry_bills.create_time <![CDATA[ >= ]]> #{startTime}
            </if>

            <if test="endTime != null">
                and enquiry_bills.create_time <![CDATA[ <= ]]> #{endTime}
            </if>

            <if test="userName != null">
                and user_name like "%"#{userName}"%"
            </if>

            <if test="companyFullName != null">
                and company_full_name like "%"#{companyFullName}"%"
            </if>

            <if test="areaFull != null">
                and area_full like "%"#{areaFull}"%"
            </if>
        </where>
        order by enquiry_bills.id DESC
    </select>

    <select id="findVOById" parameterType="java.lang.Integer"  resultMap="EnquiryBillsVOResultMap">
         select
        enquiry_bills.id as id,code,user_id,member_id,status,enquiry_bills.create_time as create_time,
        enquiry_bills.update_time as update_time,update_user,quoted_time,
        user_name AS userName,company_full_name as companyFullName,area_full as areaFull,
        user.contact_mobile as contactMobile, user.contact_name as contactName
        from enquiry_bills
        left join user on user_id = user.id
        WHERE enquiry_bills.id = #{id}
    </select>

    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from enquiry_bills
        where id = #{id}
    </delete>

    <insert id="create" useGeneratedKeys="true" keyProperty="id" parameterType="com.pieces.dao.model.EnquiryBills">
        insert into
        enquiry_bills (code,user_id,member_id,status,create_time)
        values
        (#{code},#{userId},#{memberId},#{status},#{createTime})
    </insert>

    <update id="update" parameterType="com.pieces.dao.model.EnquiryBills">
        update enquiry_bills
        <set>
                                                        
            <if test="code != null">
                code = #{code},
            </if>
                                            
            <if test="userId != null">
                user_id = #{userId},
            </if>
                                            
            <if test="memberId != null">
                member_id = #{memberId},
            </if>
                                            
            <if test="status != null">
                status = #{status},
            </if>
                                            
            <if test="createTime != null">
                create_time = #{createTime},
            </if>

            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>

            <if test="updateUser != null">
                update_user = #{updateUser},
            </if>

            <if test="quotedTime != null">
                quoted_time = #{quotedTime},
            </if>
        </set>
        where id = #{id}
    </update>


    <select id="findByCommoditys"  parameterType="java.util.HashMap" resultMap="EnquiryBillsResultMap">
         select
            b.id,
            b. code,
            b.user_id,
            b.member_id,
            b.status,
            b.create_time,
            c.id as encomd_id,
            c.commodity_id,
            c.commodity_name,
            c.specs,
            c.level,
            c.origin,
            c.amount,
            c.expect_price,
            c.expect_date,
            c.my_price,
            c.expire_date,
            c.create_time as  encomd_create_time
        from
            enquiry_bills b
        left outer join enquiry_commoditys c on b.id = c.bills_id
        where 1=1
        <if test="commodityName != null">
            and c.commodity_name like "%"#{commodityName}"%"
        </if>
        <if test="startDate != null ">
            and DATE_FORMAT(b.create_time, '%Y-%m-%d') >= DATE_FORMAT(#{startDate},'%Y-%m-%d')
        </if>
        <if test="endDate != null ">
            and DATE_FORMAT(b.create_time, '%Y-%m-%d') <![CDATA[<]]> DATE_FORMAT(DATE_ADD(#{endDate},INTERVAL 1 DAY),'%Y-%m-%d')
        </if>
    </select>

</mapper>