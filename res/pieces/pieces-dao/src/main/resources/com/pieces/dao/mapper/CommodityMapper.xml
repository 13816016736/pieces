<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pieces.dao.CommodityMapper">
    <resultMap id="CommodityResultMap" type="com.pieces.dao.model.Commodity">
            <id column="id"  property="id" />
            <result column="name"  property="name" />
            <result column="spec"  property="spec" />
            <result column="origin_of"  property="originOf" />
            <result column="executive_standard"  property="executiveStandard" />
            <result column="factory"  property="factory" />
            <result column="exterior"  property="exterior" />
            <result column="picture_url"  property="pictureUrl" />
            <result column="details"  property="details" />
            <result column="status"  property="status" />
            <result column="category_id"  property="categoryId" />
            <result column="create_time"  property="createTime" />
        
    </resultMap>

    <resultMap id="CommodityVOResultMap" type="com.pieces.dao.vo.CommodityVO">
        <id column="id"  property="id" />
        <result column="name"  property="name" />
        <result column="spec"  property="spec" />
        <result column="specName"  property="specName" />
        <result column="origin_of"  property="originOf" />
        <result column="originOfName"  property="originOfName" />
        <result column="executive_standard"  property="executiveStandard" />
        <result column="executiveStandardName"  property="executiveStandardName" />
        <result column="factory"  property="factory" />
        <result column="exterior"  property="exterior" />
        <result column="picture_url"  property="pictureUrl" />
        <result column="details"  property="details" />
        <result column="status"  property="status" />
        <result column="category_id"  property="categoryId" />
        <result column="create_time"  property="createTime" />

    </resultMap>


    <sql id="Base_Column_List">
        id,name,spec,origin_of,executive_standard,factory,exterior,picture_url,details,status,category_id,create_time
    </sql>

    <select id="findById" parameterType="java.lang.Integer" resultMap="CommodityResultMap">
        select
        <include refid="Base_Column_List" />
        from commodity
        where id = #{id}
    </select>

    <select id="findAll"  resultMap="CommodityResultMap">
        select
        <include refid="Base_Column_List" />
        from commodity
    </select>

    <select id="findByParam"  parameterType="com.pieces.dao.model.Commodity"  resultMap="CommodityVOResultMap">
        select
        <include refid="Base_Column_List" />,
        spec.name as specName,
        originOf.name as originOfName,
        executiveStandard.name as executiveStandardName
        from commodity
        left join code spec ON spec = spec.id
        left join code originOf on originOf = originOf.id
        left join code executiveStandard on executiveStandard = executiveStandard.id
        <where>
            <if test="id != null">
                id = #{id},
            </if>

            <if test="name != null">
               and name = #{name},
            </if>

            <if test="spec != null">
               and spec = #{spec},
            </if>

            <if test="originOf != null">
               and origin_of = #{originOf},
            </if>

            <if test="executiveStandard != null">
               and executive_standard = #{executiveStandard},
            </if>

            <if test="factory != null">
               and factory = #{factory},
            </if>

            <if test="exterior != null">
               and exterior = #{exterior},
            </if>

            <if test="pictureUrl != null">
               and picture_url = #{pictureUrl},
            </if>

            <if test="details != null">
               and details = #{details},
            </if>

            <if test="status != null">
               and status = #{status},
            </if>

            <if test="categoryId != null">
               and category_id = #{categoryId},
            </if>

            <if test="createTime != null">
               and create_time = #{createTime},
            </if>
        </where>
    </select>

    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from commodity
        where id = #{id}
    </delete>

    <insert id="create" useGeneratedKeys="true" keyProperty="id" parameterType="com.pieces.dao.model.Commodity">
        insert into
        commodity (name,spec,origin_of,executive_standard,factory,exterior,picture_url,details,status,category_id,create_time)
        values
        (#{name},#{spec},#{originOf},#{executiveStandard},#{factory},#{exterior},#{pictureUrl},#{details},#{status},#{categoryId},#{createTime})
    </insert>

    <update id="update" parameterType="com.pieces.dao.model.Commodity">
        update commodity
        <set>
                                                        
            <if test="name != null">
                name = #{name},
            </if>
                                            
            <if test="spec != null">
                spec = #{spec},
            </if>
                                            
            <if test="originOf != null">
                origin_of = #{originOf},
            </if>
                                            
            <if test="executiveStandard != null">
                executive_standard = #{executiveStandard},
            </if>
                                            
            <if test="factory != null">
                factory = #{factory},
            </if>
                                            
            <if test="exterior != null">
                exterior = #{exterior},
            </if>
                                            
            <if test="pictureUrl != null">
                picture_url = #{pictureUrl},
            </if>
                                            
            <if test="details != null">
                details = #{details},
            </if>
                                            
            <if test="status != null">
                status = #{status},
            </if>
                                            
            <if test="categoryId != null">
                category_id = #{categoryId},
            </if>
                                            
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
                            
        </set>
        where id = #{id}
    </update>


    <select id="findVoByPage" resultMap="CommodityVOResultMap" >
        select
        commodity.id,
        commodity.name,
        spec,
        origin_of,
        executive_standard,
        factory,
        exterior,
        picture_url,
        details,
        commodity.status,
        category_id,
        commodity.create_time,
        spec.name as specName,
        originOf.name as originOfName,
        executiveStandard.name as executiveStandardName
        from commodity
        left join code spec ON spec = spec.id
        left join code originOf on origin_of = originOf.id
        left join code executiveStandard on executive_standard = executiveStandard.id
    </select>

</mapper>