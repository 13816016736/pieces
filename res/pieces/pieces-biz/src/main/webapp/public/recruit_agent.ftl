<script>
    _global = {
        v: {
            isMobile: /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent)
        },
        fn: {
            init: function() {
                this.region();
                this.model();
            },
            region: function() {
                var self = this;
                $('select[name="province"]').on('change', function() {
                    if (this.value == 0) {
                        $(this).next().html('<option value="0">所在城市</option>');
                    } else {
                        self.$el = $(this).next();
                        self.getCity(this.value);
                    }
                })
            },
            getCity: function(id) {
                var self = this;
                $.ajax({
                    url: '/gen/area',
                    data: {'parentId': id},
                    dataType: 'json',
                    success: function(response) {
                        // if (response.status === 'success') {
                        console.log(response);
                        self.toHtml(response);
                        // }
                    }
                });
            },
            toHtml: function(json) {
                var model = [];
                console.log(json);
                $.each(json, function(i, object) {
                    model.push('<option value="' , object.id , '">' , object.areaname, '</option>');
                })
                this.$el.html(model.join(''));
            },
            model: function() {
                var $modelWrap = $('.model-wrap'),
                        $model = _global.v.isMobile ? $('.sec0').find('.cont') : $modelWrap.find('.model'),
                        $name = $model.find('input[name="name"]'),
                        $mobile = $model.find('input[name="mobile"]'),
                        $province = $model.find('select[name="province"]'),
                        $city = $model.find('select[name="city"]'),
                        $error = $province.prev();

                // 隐藏错误提示
                $model.on('blur', '.ipt', function() {
                    $(this).prev().show().hide();
                })
                $province.on('change', function() {
                    $error.hide();
                })
                $city.on('change', function() {
                    $error.hide();
                })

                var checkForm = function() {
                    if (!$name.val()) {
                        $name.prev().show().html('请输入姓名');
                        $name.focus();
                        return false;
                    } else {
                        $name.prev().show().hide();
                    }

                    if (!$mobile.val()) {
                        $mobile.prev().show().html('请输入手机号');
                        $mobile.focus();
                        return false;
                    } else if (!/^1[3-9]\d{9}$/.test($mobile.val())) {
                        $mobile.prev().show().html('手机号码格式错误');
                        $mobile.focus();
                        return false;
                    } else {
                        $mobile.prev().show().hide();
                    }

                    if ($province.val() === '0') {
                        $error.css({left:'5px'}).show().html('请选择省');
                        $province.focus();
                        return false;
                    } else {
                        $error.show().hide();
                    }

                    if ($city.val() === '0') {
                        $error.css({left:'55%'}).show().html('请选择市');
                        $city.focus();
                        return false;
                    } else {
                        $error.hide();
                    }
                    return true;
                }

                // 开始合作
                $('.button').on('click', function() {
                    if (_global.v.isMobile) {
                        window.scrollTo(0, 0);
                    } else {
                        $modelWrap.show();
                    }
                })

                // 关闭弹层
                $modelWrap.on('click', '.close', function() {
                    $modelWrap.hide();
                })
                $modelWrap.on('click', '.close2', function() {
                    $modelWrap.hide();
                })

                // 提交用户资料
                $model.on('click', '.submit', function(e) {
                    var pass = checkForm();
                    if (pass) {
                        $.ajax({
                            url: '/recruit/submit',
                            type: 'POST',
                            data:{"name":$name.val(),"phone":$mobile.val(),"areaId":$city.val()},
                            success: function(result) {
                                if(result.status=='y'){
                                    $model.find('.suc').show().prev().remove();
                                }else{
                                    $.notify({
                                        type: 'error',
                                        title: '提交错误',
                                        text: result.info
                                    })
                                }
                            }
                        })


                    } else {
                    }
                    e.preventDefault(); // 阻止表单默认提交
                })
            }
        }
    }

    _global.fn.init();

</script>
